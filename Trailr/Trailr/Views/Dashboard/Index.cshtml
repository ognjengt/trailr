@using Trailr.Models
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@{ 
    var user = (UserAccount)Session["user"];
}
<div ng-app="App" ng-controller="MainController">
    <!--Nav bar-->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Trailr</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#"><b>Projects</b> <span class="sr-only">(current)</span></a></li>
                    <li><a href="#"><b>Drugi</b></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><b>@user.FullName</b></a></li>
                    <li><a href="/Account/LogOut"><b>Logout</b></a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container-fluid">
        <div class="dashboard-main">
            <div class="container-fluid project-holder">
                <h2>All projects</h2>
                <div class="btn btn-default btn-classic" ng-click="addPopupVisible = !addPopupVisible"><b>Add new</b></div>
                <div class="row projects-row">

                    <div ng-repeat="pr in projects">
                        <a href="Dashboard/Project/{{pr.Id}}">
                            <div class="col-md-3">
                                <div class="project">
                                    <div class="card-header">
                                        <h4><b>{{pr.Title}}</b></h4>
                                        <h2><b>{{pr.HoursSpent}}:{{pr.MinutesSpent}}:{{pr.SecondsSpent}}</b></h2>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                </div>      
            </div>

        </div>
        
    </div>
    
<!--Add popup-->
<div id="addPopup" ng-show="addPopupVisible">
    <div class="overlay">
        <div class="addNew-wrapper">
            <div class="header">
                <b>Add new project</b>
            </div>
            <div class="popup-body">
                    <div class="form-group">
                        <label for="email">Project title</label>
                        <input type="text" class="form-control" id="projectTitleInput" ng-model="projectTitleInput">
                    </div>
                    <button type="submit" class="btn btn-default btn-classic" ng-click="addProject()"><b>Submit</b></button>
                    <button type="button" class="btn btn-default btn-classic" ng-click="addPopupVisible = !addPopupVisible"><b>Cancel</b></button>
            </div>
        </div>
    </div>
</div>


